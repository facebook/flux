{
  "name": "flux-chat",
  "version": "1.0.0",
  "description": "Example Flux chat application.",
  "repository": "https://github.com/facebook/flux",
  "main": "js/app.js",
  "dependencies": {
    "classnames": "~2.2.5",
    "flux": "~2.1.1",
    "immutable": "~3.8.1",
    "keymirror": "~0.1.1",
    "react": "15.x",
    "react-dom": "15.x"
  },
  "devDependencies": {
    "babel-core": "~6.13.2",
    "babel-jest": "~14.1.0",
    "babel-preset-es2015": "~6.13.2",
    "babel-preset-react": "~6.11.1",
    "babelify": "~7.3.0",
    "browserify": "~13.1.0",
    "envify": "^3.0.0",
    "jest-cli": "~14.1.0",
    "uglify-js": "~2.7.1",
    "watchify": "~3.7.0"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d js/app.js",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > js/bundle.min.js",
    "test": "jest"
  },
  "author": "Bill Fisher",
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
